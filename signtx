#!/bin/bash
# Copyright (c) 2013 CIYAM Open Developers

if [ $# -lt 1 ]; then
 echo "Usage: signtx [public key] [[image file]]"
else
 address=$1

 echo "Now scanning for the raw tx QR code..."
 if [ "$2" = "" ]; then
  ./zbarcam --raw -Sdisable -Sqrcode.enable>raw_tx
 else
  ./zbarimg --raw -Sdisable -Sqrcode.enable $2>raw_tx
 fi
 raw_tx=`cat raw_tx`

 ./getpriv $address
 pkey=`xclip -o`
 echo "./bitcoind -rpc_password=none importprivkey $pkey" >txscript
 echo "./bitcoind -rpc_password=none signrawtransaction $raw_tx" >>txscript

 chmod a+x txscript
 ./txscript >~signtx

 cat ~signtx | grep -o '"complete" : true' >x
 complete=`cat x | grep -o true`
 rm x

 if [ ! "$complete" = "true" ]; then
  cat ~signtx
  echo Error: Invalid tx or tx could not be completed.
 else
  echo -n "sendrawtransaction " >send_tx
  cat ~signtx | grep -o 0100[0-9a-f]*0000 >>send_tx
  ./qr send_tx
 fi

 rm ~signtx

fi

