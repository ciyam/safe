if [ $# -lt 1 ]; then
 echo "Usage: signtx [public key]"
else
 address=$1

 echo "Now scanning for the raw tx QR code..."
 ./zbarcam --raw -Sdisable -Sqrcode.enable > raw_tx
 raw_tx=`cat raw_tx`

 ./getpriv $address
 pkey=`xclip -o`
 ./bitcoind -rpc_password=none importprivkey $pkey >txscript
 ./bitcoind -rpc_password=none signrawtransaction $raw_tx >>txscript
 chmod a+x txscript
 ./txscript
fi

